---
const title = "Comixbin";
const image = "/assets/images/projects/comixbin.png";
---

<section class="project">
    <div class="grid-ish">
        <div class="featured-image">
            <img src={image} alt={title} />
        </div>
        <div class="details">
            <article>
                <h4>{title}</h4>
                <hr />
                <p>Comixbin makes managing your comic book collection easy. Comixbin is built with Claris FileMaker Pro for desktop and mobile devices.</p>
                <h5>Features</h5>
                <div class="card-wrapper">
                    <div class="card">Multi-User Collection Management</div>
                    <div class="card">Collection Loan Tracking</div>
                    <div class="card">Wishlists</div>
                    <div class="card">Issue Gap Reports</div>
                </div>
            </article>
        </div>
    </div>
</section>

<style>
    .project {
        padding: 5rem;
    }
    h4,
    h5 {
        text-align: center;
    }
    h4 {
        font-size: 3rem;
    }
    h5 {
        font-size: 2rem;
        margin-block: 1rem;
    }
</style>