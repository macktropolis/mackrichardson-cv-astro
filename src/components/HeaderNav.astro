<input id="nav__toggle" class="nav__toggle" type="checkbox" />
<nav class="nav" id="site__nav" aria-label="Primary">
  <ul role="list" class="nav__list">
    <li><a href="#profile" class="nav__profile">Profile</a></li>
    <li><a href="#projects" class="nav__projects">Projects</a></li>
    <li><a href="#mission" class="nav__mission">Mission</a></li>
  </ul>
</nav>
<label class="nav__toggle-label" for="nav__toggle"><span></span></label>

<style>
    a {
        color: hsl(var(--color-brand), 0.9);
        font-weight: 700;
        position: relative;
        text-decoration: none; /* Remove the default underline */
        text-transform: uppercase;
        transition: all 0.4s ease;
    }
    a:hover {
        color: hsl(var(--color-brand), 1);
    }
    a::before,
    a::after {
        content: '';
        position: absolute;
        left: 50%;
        width: 0;
        height: 3px; /* Thickness of the line */
        background-color: hsl(204, 78%, 61%);
        transition: width 0.4s ease, left 0.4s ease, opacity 0.4s ease;
        opacity: 0;
    }
    a::before {
        top: 0; /* Position line above the text */
        transform: translateY(-50%); /* Adjust to align with vertical center */
    }
    a::after {
        bottom: 0; /* Position line below the text */
        transform: translateY(50%); /* Adjust to align with vertical center */
    }
    a:hover::before,
    a:hover::after {
        left: 0;
        width: 100%;
        opacity: 1;
    }
  </style>