---
// data imports
import * as site from "../data/site.json";

const { siteName, url, favicon, logo, author } = site;
const title = "Certifications";
---

<section id="certifications">
    <h3>{title}</h3>
    <section>
        <img src="/assets/images/claris-filemaker-pro-associate-badge.png" alt="Claris FileMaker Pro Associate" height="150" width="150" />
        <img src="/assets/images/claris-filemaker-pro-specialist-badge.png" alt="Claris FileMaker Pro Specialist" height="150" width="150" />
        <img src="/assets/images/claris-filemaker-pro-expert-badge.png" alt="Claris FileMaker Pro Expert" height="150" width="150" />
        <img src="/assets/images/claris-filemaker-server-administrator-associate.png" alt="Claris FileMaker Server Administrator Associate" height="150" width="150" />
        <img src="/assets/images/claris-connect-associate-badge.png" alt="Claris Connect Associate" height="150" width="150" />
        <img src="/assets/images/claris-connect-specialist-badge.png" alt="Claris Connect Specialist" height="150" width="150" />
    </section>
    <a href="https://www.credly.com/users/mack-richardson" title="Mack Richardson's Credly Profiles" class="button">View All Credentials</a>
</section>

<style>
    #certifications {
        background: hsl(0, 0%, 96%, 0.2);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-inline: auto;
        padding: 4rem;
        width: 100%;
    }
    #certifications section {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: space-evenly;
        margin-block: 5rem;
        max-width: 100ch;
        width: 100%;
    }
    #certifications section img {
        filter: grayscale(100%);
        opacity: 0.8;
        transition: opacity 0.4s ease-in-out, filter 0.4s ease-in-out;
    }
    #certifications section img:hover {
        filter: grayscale(0);
        opacity: 1;
    }
    h3 {
        font-size: 4rem;
        text-align: center;
    }
</style>